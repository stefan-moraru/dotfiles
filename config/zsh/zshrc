function git_domain()
{
  if git rev-parse --is-inside-work-tree > /dev/null 2>&1; then
    echo "($(git config user.email | grep -o '@[^.]*' | cut -c 2-)) ($(git symbolic-ref --short HEAD)) "
  fi
}

setopt prompt_subst

PROMPT='%B%F{cyan}%~ %f%b%F{green}$(git_domain)%f$ '

export PATH=$HOME/bin:/usr/local/bin:$PATH
export PATH="./node_modules/.bin/:$PATH"

export PNPM_HOME="/Users/stefanmoraru/Library/pnpm"
export PATH="$PNPM_HOME:$PATH"

export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

export BAT_THEME="tokyonight_night"

alias ll="eza --color=always --long --git --no-filesize --icons=always --no-time --no-user --no-permissions --all"
alias vim="nvim"
alias vi="nvim"

alias ga='git add'
alias gd='git diff'
alias gs='git status'
alias gpr='git pull --rebase'

eval "$(zoxide init zsh)"

source /opt/homebrew/share/zsh-autosuggestions/zsh-autosuggestions.zsh
